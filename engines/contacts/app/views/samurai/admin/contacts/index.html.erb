<h2 class="pull-left">Contacts</h2>
<%= render 'admin/shared/nav' %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading">
    All Contacts
  </div>
  <table class="table">
    <thead>
      <th>ID</th>
      <th>Phone</th>
      <th>Connected At</th>
      <th>First Name</th>
      <th>Last Name</th>
    </thead>
    <tbody>
    <%- @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.created_at.strftime("%d %b. %Y") %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
